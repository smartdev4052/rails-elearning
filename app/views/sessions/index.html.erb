<div class="container main">
	<div class="row">
		<div class="col-md-4 mt-3">
			<div class="row">
				<div class="col-md-9 center-block">
            		<h2><strong>Dashboard</strong></h2>
            	</div>
			</div>
            <hr>
			<div class="media">
				<div class="img m-2">
            	<%= image_tag current_user.image.url, class: "img-fluid", id: :img_tumb2 %>
            	</div>
				<div class="media-body m-2">
	            	<h4><strong><%= link_to current_user.name, user_url(current_user) %></strong></h4>
					<h5>@<%= current_user.department %></h5><hr>
					<h4 class="text-success"><i class="fas fa-award"></i><%= current_user.answers.count %> Words Learned</h4>
					<h5>(in <%= current_user.lessons.count %> Categories)</h5>
				</div>
			</div>
			<hr>
			<p class="pull-left"><%= link_to dashboard_path do%>
				<i class="fa fa-arrow-circle-o-left"></i>Back to Recent Activity<% end %></p>
		</div>

        <div class="col-md-1"></div>
		<div class="col-md-7 mb-5">
				<h3 class="mt-2 pull-left"><i class="fa fa-book"></i><strong>Words You Learned</strong></h3>
					<div class="pagenate pull-center"><%= will_paginate @words %></div>		
						<table class="table table-striped table-responsive">
							<thead>
					    		<th>Words</th>
					    		<th>Answers</th>
					    		<th>Categories</th>
					    	</thead>
						<% @words.each do |word| %>
					    	<tbody>
			                    <td class="description">
			                        <h4><%= word.content %></h4>
			                    </td>
			                    <td class="description">
			                        <h4><%= word.choices.find_by(judge: true).content %></h4>
			                    </td>
			                    <td class="description">
			                        <h4><%= word.category.title %></h4>
			                    </td>
					    	</tbody>
						<% end %>
					</table>
		</div>
	</div>
</div>