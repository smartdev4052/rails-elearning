<div class="container main">
	<div class="row">
		<div class="col-md-5" style="margin-top:-40px;">
            <h1>ARE YOU READY TO <br><strong>MAKE IT AWESOME</strong> WITH US ?</h1>
            <hr>
            <div class="top-image">
            <%=image_tag "top-image2.jpg", :size => "380x380" %>
        	</div>

		</div>
		<div class="col-md-2 center-block"></div>
		<div class="col-md-5 float-left">
	        <% if login_error = flash[:login] %>
			    <div class="alert alert-danger">
			        <%= login_error %>      
			    </div>
	    	<% end %>
			<h1><strong>Create new account</strong></h1>

       		<%= form_for @user, url: signup_path do |f| %>
	            <% if @user.errors.any? %>
	                <div class="alert alert-danger">
	                    <ul class="m-0">
	                        <% @user.errors.full_messages.each do |msg| %>
	                            <li><%= msg %></li>
            				<% end %>
            			</ul>
            		</div>
				<% elsif flash[:success] %>
				    <div class="alert alert-info">
		                <ul class="m-0">
							<li><%= flash[:success]  %></li>
						</ul>
					</div>
	            <% end %>

        <div class=row>
        	<div class="col-md-12 float-left">
				<div class="form-group">
					<%= f.label :name %>
					<%= f.text_field :name, :size => "40", class: "form-control" %>
				</div>
				<div class="form-group">
					<%= f.label :email %>
					<%= f.text_field :email, class: "form-control" %>
				</div>

				<div class="form-group">
					<%= f.label :password %>
					<%= f.password_field :password, class: "form-control" %>
				</div>

				<div class="form-group">
					<%= f.label :password_confirmation %>
					<%= f.password_field :password_confirmation, class: "form-control" %>
				</div>

				<div class="form-group">
					<%= f.label :department %>
					<%= f.text_field :department, class: "form-control" %>
				</div>
					<%= f.hidden_field :authority, :value => 3 %>

				<%= f.submit "Sign-in", 
				class: "btn btn-primary btn-lg pl-5 pr-5" %>
				<% end %>
			</div>
		</div>
	</div>
</div>