<div class="container main mt-5">
	<div class="row">
		<div class="col-md-3 mt-3">
			<div class="row">
				<div class="col-md-8">
            		<h1><strong>Profile</strong></h1>
            	</div>
            	<div class="col-md-4">
            		<% if current_user?(@user)%>
            		<%= button_to "Edit", edit_user_path(@user), 
					class: "btn btn-info btn-lg pull-right" %>
					<% end %>
				</div>
			</div>
            <hr>
			<div class="row">
				<div class="col-md-12 center-block mb-5">
            		<%= image_tag @user.image.url, id: :img_prev%>
            	<h1 class="mt-2"><strong><%= @user.name %></strong>
            		<small>[@<%= @user.department %>]</small></h1>
				<h4><i class="fa fa-envelope" aria-hidden="true"></i><%= @user.email %></h4>
					<small class="text-success"><%= @user.biography %></small>

				<div class="row">
				<div class="col-md-6 center-block mt-2 mb-1">
					<h3><%= link_to "#{@user.followers.count} followers", followers_user_path(@user) %></h3>
				</div>
				<div class="col-md-6 center-block mt-2 mb-1">
					<h3><%= link_to "#{@user.following.count} following", following_user_path(@user) %></h3>
				</div>
				</div>
	        </div>
	    </div>
	</div>
        <div class="col-md-2"></div>
		<div class="col-md-7 mb-5">
			<h1 class="mt-3"><strong><%= @title %></strong></h1>
    		<table class="table table-striped table-responsive mb-5">
		    	<thead>
		    		<th>Name</th>
		    		<th style="width: 240px;"></th>
		    		<th style="width: 500px;">Biography</th>
					<th style="width: 130px;">Department</th>
		    	</thead>
				<% @users.each do |user| %>
			    	<tbody>
			    		<td>
							<div class="img m-2">
			    			<%= image_tag user.image.url, id: :img_prev2%>
			                </div>
			            </td>
			            <td class="align-middle" style="width: 240px;"><h2><%= link_to user.name, user_url(user) %></h2></td>
			    		<td class="align-middle" style="width: 500px;"><h3><%= user.biography %></h3></td>
						<td class="align-middle" style="width: 130px;"><h3><%= user.department %></h3></td>
			    	</tbody>
		    	<% end %>
			</table>
		<% if @users.empty? %>
			<div class="alert alert-info">
				<h1 class="ml-5 mr-5">Relationship doesn't exist yet. </h1>
			</div>
		<% end %>
		</div>
		</div>
	</div>
</div>