<%= form_for [:admin, @category] do |f| %>
<div class="row">
	<div class="col-md-5 center-block">
		<% if @category.errors.any? %>
            <div class="alert alert-danger">
                <ul class="m-0">
                    <% @category.errors.full_messages.each do |msg| %>
                        <li><%= msg %></li>
                    <% end %>
                </ul>
            </div>
        <% end %>
			<%= f.label :title %>
		    <%= f.text_field :title, class: 'form-control mb-2' %>

		    <%= f.label :description %>
		    <%= f.text_area  :description, class: 'form-control mb-2' %>

		    <%= f.label :difficulty %>
		    <%= f.hidden_field :difficulty, id: :difficulty_rating, class: 'form-control mb-2' %>
		    <div id='star-rating' data-score=" <%= @category.difficulty %>"></div>

			<script>
			$('#star-rating').raty({
				path: '/assets/',
				click: function(score, e) {
				$("#difficulty_rating").val(score)
				}
			});
			</script>

			<span class="btn-group pull-right">				
				<%= f.submit "Save", class: "btn btn-outline-primary btn-lg mr-3 mt-3"%>
				<% end %>
				<%= button_to "Cancel", admin_categories_path, method: :get, class: "btn btn-outline-warning btn-lg mt-3" %>
			</span>
		</div>
	</div>
</div>