<div class="container main mt-5">
	<div class="row">
		<div class="col-md-3 mt-3 mb-3">
            <h1><strong>Categories: Admin</strong></h1>
        </div>
		<div class="col-md-2 mt-3 mb-3">
			<%= link_to "Add New Category", new_admin_category_path,
			class: "btn btn-info btn-lg" %>
        </div>
    </div>
	<div class="row">
		<div class="col-md-12 center-block mb-5">
			<% if flash[:success] %>
			    <div class="alert alert-info">
	                <ul class="m-0">
						<li><%= flash[:success]  %></li>
					</ul>
				</div>
			<% end %>
    		<table class="table table-striped table-responsive">
		    	<thead>
		    		<th style="width: 250px;">Title</th>
		    		<th style="width: 600px;">Description</th>
					<th style="width: 250px;">Action</th>
		    	</thead>
				<% @categories.each do |category| %>
			    	<tbody>
			    		<td style="width: 250px;">
			    			<h3>
								<%= link_to admin_category_words_path(category_id: category.id)  do%>
			    				<%= category.title %>
			    				<% end %>    					
			    			</h3>
			    		</td>
			    		<td style="width: 500px;"><h3><%= category.description %></h3></td>
						<td style="width: 250px;">
							<h4 class="block">
								<%= link_to  new_admin_category_word_path(category_id: category.id)  do%><i class="fa fa-plus-circle"></i>New Word<% end %></h4>
							<h4>
								<%= link_to  edit_admin_category_path(category)  do%><i class="fa fa-pencil"></i>Edit Category<% end %></h4>
							<h4>
								<%= link_to  admin_category_path(category.id), method: :delete  do%><i class="fa fa-times-circle"></i>Del. Category<% end %></h4>
						</td>	
			    	</tbody>
			    <% end %>
			</table>
			<% if @categories.empty? %>
			    <div class="alert alert-info ml-5">
					<h2>Lesson has not been registered yet.</h2>
				</div>
			<% end %>
			<div class="pagenate"><%= will_paginate %></div>			
		</div>
	</div>
</div>