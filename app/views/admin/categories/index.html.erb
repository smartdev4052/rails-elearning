<div class="container-fluid main">
	<div class="row">
		<div class="col-md-1 center-block"></div>
		<div class="col-md-3 center-block">
            <h2><strong>Categories: Admin</strong>
            </h2>
            <hr>
        </div>
		<div class="col-md-8 center-block">
			<%= link_to "Add New Category",  new_admin_category_path,
			class: "btn btn-info" %>
        </div>
    </div>
	<div class="row">
		<div class="col-md-1 center-block"></div>
		<div class="col-md-10 center-block">
    <table class="table table-striped table-responsive">
	    	<thead>
	    		<th>Title</th>
	    		<th>Description</th>
				<th>Action</th>
	    	</thead>
		<% @categories.each do |category| %>
	    	<tbody>
	    		<td class="description"><h4><%= category.title %></h4></td>
	    		<td class="description"><h5><%= category.description %></h5></td>
				<td>
					<h4 class="float-left mr-2">
						<%= link_to  "#"  do%><i class="fa fa-plus-circle"></i><% end %></h4>
					<h4 class="float-left mr-2">
						<%= link_to  edit_admin_category_path(category)  do%><i class="fa fa-pencil"></i><% end %></h4>
					<h4 class="float-left mr-2">
						<%= link_to  admin_category_path(category.id), method: :delete  do%><i class="fa fa-times-circle"></i><% end %></h4>
					<h4 class="float-left mr-2">
				</td>	
	    	</tbody>
	    <% end %>
	</table>
	<div class="pagenate"><%= will_paginate %></div>
</div>
<div class="col-md-1 center-block"></div>
</div>