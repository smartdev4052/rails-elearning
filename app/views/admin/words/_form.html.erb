<%= form_for [:admin, @category, @word] do |f| %>
<div class="row">
	<div class="col-md-4">
		<% if @word.errors.any? %>
            <div class="alert alert-danger">
                <ul class="m-0">
                    <% @word.errors.full_messages.each do |msg| %>
                        <li><%= msg %></li>
                    <% end %>
                </ul>
            </div>
        <% end %>
			<%= f.label :word %>
		    <%= f.text_field :content, class: 'form-control' %>
    </div>

	<div class="col-md-1"></div>
	<div class="col-md-4">
		<%= f.label :choice %><br>
		<%= f.fields_for :choices do |c| %>
			<%= c.text_field :content, class: 'form-control' %>
			<%= c.check_box :judge, class: 'pull-left mr-2 mt-3 mb-4' %>
			<small>correct answer</small>
		<% end %>
	<div class="btn-group pull-right">
		<%= f.submit "Save", class: "btn btn-outline-primary btn-lg mt-5 mr-3" %>
		<% end %>
		<%= button_to "Cancel", admin_category_words_path(category_id: @category.id), method: :get, class: "btn btn-outline-warning btn-lg mt-5" %>
	</div>												
	</div>			
	<div class="col-md-2 center-block"></div>
</div>