	<%= form_for [:admin, @category, @word] do |f| %>
	<div class="row">
		<div class="col-md-4 center-block">
			<% if @word.errors.any? %>
                <div class="alert alert-danger">
                    <ul class="m-0">
                        <% @word.errors.full_messages.each do |msg| %>
                            <li><%= msg %></li>
                        <% end %>
                    </ul>
                </div>
            <% end %>
				<%= f.label :word %>
			    <%= f.text_field :content, class: 'form-control' %>
        </div>

		<div class="col-md-1 center-block"></div>
		<div class="col-md-4 center-block">
			<%= f.label :choice %><br>
			<%= f.fields_for :choices do |c| %>
    			<%= c.text_field :content, class: 'form-control' %>
    			<label class="form-check-label ml-1 mb-2">correct answer</label>
    			<%= c.check_box :judge %>
			<% end %>
		</div>			
		<div class="col-md-2 center-block">
			<div class="update-btn">
		  		<div class="row">		  							
					<div class="col-md-5 center-block">
						<div style="height: 320px;"></div>
						<%= f.submit "Save", class: "btn btn-outline-primary btn-lg" %>
					</div>
				<% end %>
					<div class="col-md-5 center-block">
						<div style="height: 320px;"></div>
						<%= button_to "Cancel", admin_category_words_path(category_id: @category.id), method: :get, class: "btn btn-outline-warning btn-lg" %>
					</div>
				</div>
			</div>
		</div>
	</div>