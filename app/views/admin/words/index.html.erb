<div class="container main mt-5">
	<div class="row">
		<div class="col-md-4 mt-3 mb-3">
            <h1><strong><%= @category.title %> Words: Admin</strong></h1>
        </div>
        <div class="col-md-2 mt-3 mb-3">
			<%= link_to "Add New Word",  new_admin_category_word_path(category_id: @category.id), class: "btn btn-info btn-lg" %>
        </div>
    </div>
	<div class="row">
		<% if @words.empty? %>
		    <div class="alert alert-info">
				<h1 class="ml-5 mr-5">Words has not been registered yet. </h1>
			</div>
		<% else %>
		<div class="col-md-12 center-block">
			<% if flash[:success] %>
			    <div class="alert alert-info">
	                <ul class="m-0">
						<li><%= flash[:success]  %></li>
					</ul>
				</div>
			<% end %>

    	<table class="table table-striped table-responsive">
	    	<thead>
	    		<th>Words</th>
				<th>Action</th>
	    	</thead>
		<% @words.each do |word| %>
	    	<tbody>
	    		<td style="width: 800px;">
	    			<h3><%= word.content %></h3>
	    		</td>
				<td style="width: 300px;">
					<h4 class="pull-left mr-3">
						<%= link_to edit_admin_category_word_path(id: word) do%><i class="fa fa-pencil"></i>Edit Word<% end %></h4>
					<h4 class="pull-left">
						<%= link_to admin_category_word_path(id: word.id), method: :delete  do%><i class="fa fa-times-circle"></i>Del. Word<% end %></h4>
				</td>	
	    	</tbody>
	    <% end %>
		</table>
		<h3 class="mt-1 mb-5"><%= link_to admin_categories_path do%><i class="fa fa-arrow-circle-o-left"></i>Back to Admin:Category<% end %></h3>
		</div>
		<%= will_paginate @words, renderer: BootstrapPagination::Rails, class: 'pagination-sm' %>
	    <% end %>
	</div>
</div>