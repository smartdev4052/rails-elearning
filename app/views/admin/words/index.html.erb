<div class="container-fluid main">
	<div class="row">
		<div class="col-md-1 center-block"></div>
		<div class="col-md-3 center-block mb-3">
            <h2><strong><%= @category.title %> Wordlist: Admin</strong></h2>
        </div>
        <div class="col-md-8 center-block mb-3">
			<%= link_to "Add New Word",  new_admin_category_word_path(category_id: @category.id), class: "btn btn-info btn-lg" %>
        </div>
            <hr>
        </div>
	<div class="row">
		<div class="col-md-1 center-block"></div>
		<div class="col-md-7 center-block">
			<% if flash[:success] %>
		    <div class="alert alert-info">
                <ul class="m-0">
					<li><%= flash[:success]  %></li>
				</ul>
			</div>
			<% end %>

    <table class="table table-striped table-responsive">
	    	<thead>
	    		<th>Title</th>
				<th>Action</th>
	    	</thead>
		<% @words.each do |word| %>
	    	<tbody>
	    		<td class="description">
	    			<h4><%= word.content %></h4></td>
				<td>
					<h4 class="float-left mr-3">
						<%= link_to edit_admin_category_word_path(id: word) do%><i class="fa fa-pencil"></i>Edit Word<% end %></h4>
					<h4 class="float-left mr-2">
						<%= link_to admin_category_word_path(id: word.id), method: :delete  do%><i class="fa fa-times-circle"></i>Del. Word<% end %></h4>
				</td>	
	    	</tbody>
	    <% end %>
	</table>
	<div class="pagenate"><%= will_paginate %></div>
</div>
<div class="col-md-1 center-block"></div>
</div>