<div class="container main">
	<div class="row">
		<div class="col-md-5 mt-3 mb-3">
            <h2><strong><%= @category.title %> Words: Admin</strong></h2>
        </div>
        <div class="col-md-2 center-block mt-3 mb-3">
			<%= link_to "Add New Word",  new_admin_category_word_path(category_id: @category.id), class: "btn btn-info btn-lg" %>
        </div>
    </div>
	<div class="row">
		<div class="col-md-12 center-block">
			<% if flash[:success] %>
		    <div class="alert alert-info">
                <ul class="m-0">
					<li><%= flash[:success]  %></li>
				</ul>
			</div>
			<% end %>

    	<table class="table table-striped table-responsive">
	    	<thead>
	    		<th style="width: 2000px;">Title</th>
				<th>Action</th>
	    	</thead>
		<% @words.each do |word| %>
	    	<tbody>
	    		<td  style="width: 2000px;">
	    			<h4><%= word.content %></h4></td>
				<td class="description">
					<h5 class="float-left mr-2">
						<%= link_to edit_admin_category_word_path(id: word) do%><i class="fa fa-pencil"></i>Edit Word<% end %></h5>
					<h5 class="float-left">
						<%= link_to admin_category_word_path(id: word.id), method: :delete  do%><i class="fa fa-times-circle"></i>Del. Word<% end %></h5>
				</td>	
	    	</tbody>
	    <% end %>
		</table>
		<h5 class="mt-1 mb-5"><%= link_to admin_categories_path do%><i class="fa fa-arrow-circle-o-left"></i>Back to Admin:Category<% end %></h5>
		<div class="pagenate"><%= will_paginate %></div>
		</div>
	</div>
</div>