<div class="container-fluid main">
	<div class="row">
		<div class="col-md-1 center-block"></div>
		<div class="col-md-8 center-block">
			<div class="row">
				<div class="col-md-12 center-block">
            		<h2><strong>Lesson: <%= @category.title %></strong></h2>
            	<hr>
            	</div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-md-1 center-block"></div>
            <div class="col-md-10 center-block bg-light" style="height:550px; width: 500px;">
                <h3 class="pt-5 pl-5"><strong>No. <%= @progress %></strong> of 
                    <%= @words.count %></h3>
                <div class="row">
                    <div class="col-md-2 center-block"></div>
                    <div class="col-md-3 align-items-center" id="word_panel">
                        <div class="text-center">
                        <h1><strong><%= @word.content %></strong></h1>
                        </div>
                    </div>
                    <div class="col-md-1 center-block"></div>
                    <div class="col-md-4 center-block mt-5">
                        <h3><strong>Choices</strong></h3>
                        <% @word.choices.each do |choice| %>
                            <%= button_to choice.content, category_lesson_answers_path, 
                            params:{choice_id: choice.id, word_id: @word.id},
                            class: "btn btn-outline-warning btn-lg btn-block mt-3 ml-4" %>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>