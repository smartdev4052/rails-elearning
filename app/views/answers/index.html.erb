<div class="container main">
	<div class="row">
		<div class="col-md-10 mt-3">
			<div class="row">
				<div class="col-md-12">
            		<h2><strong>Result: <%= @category.title %></strong></h2>
                        <h5 class="pt-3 text-muted"><i class="fa fa-user text-muted mb-1 mr-0"></i> 
                        <%= @lesson.user.name %> / <i class="fa fa-calendar text-muted mb-1 mr-0"></i>
                        <%= l @lesson.created_at, format: :long %></h5>
            	</div>
            </div>
        </div>
        <div class="col-md-2 center-block alert-danger pt-1 mb-1">
            <h3 class="text-center">Score<hr><%= @points %>/<%= @category.words.count %></h3>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 center-block">
            <table class="table table-striped table-responsive mb-5">
                <thead>
                    <th></th>
                    <th>Words</th>
                    <th>Answers</th>
                    <th>Correct answers</th>
                </thead>
                <% @lesson_answers.each do |answer| %>
                <tbody>
                    <td class="answer_judge">
                        <% if answer.choice.judge %>
                            <h4 class="text-center"><i class="fas fa-award"></i></h4>
                        <% else %>
                            <h4 class="text-center"><i class="fa fa-times text-danger"></i></h4>
                        <% end %>
                    </td>
                    <td class="description">
                        <h4><%= answer.word.content %></h4>
                    </td>
                    <td class="description">
                        <h4><%= answer.choice.content %></h4>
                    </td>
                    <td class="description">
                        <h4><%= answer.word.correct_answer.content %></h4>
                    </td>
                </tbody>
                <% end %>
            </table>
            <div class="pagenate"><%= will_paginate @lesson_answers%></div>
        </div>
    </div>
</div>